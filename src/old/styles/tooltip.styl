$tooltip-colour = $full-black

.tooltip
	position relative

	&:before
	&:after
		position absolute
		transform translate3d(0, 0, 0)
		visibility hidden
		opacity 0
		z-index 1000
		pointer-events none
		transition 0.3s ease
		transition-delay 0

	&:hover:before
	&:hover:after
		visibility visible
		opacity 1
		transition-delay 100ms

	&:before
		content ''
		position absolute
		background-color transparent
		border 6px solid transparent
		z-index 1001

	&:after
		$font-family()
		$bold()
		background-color $tooltip-colour
		color $white
		padding 8px 10px
		font-size 0.75rem
		line-height @font-size
		border-radius $small-border-radius
		white-space nowrap

	&[data-hint]:after
		content attr(data-hint)


.tooltip-top-left:before
	border-top-color $tooltip-colour

.tooltip-top-right:before
	border-top-color $tooltip-colour

.tooltip-top:before
	border-top-color $tooltip-colour

.tooltip-bottom-left:before
	border-bottom-color $tooltip-colour

.tooltip-bottom-right:before
	border-bottom-color $tooltip-colour

.tooltip-bottom:before
	border-bottom-color $tooltip-colour

.tooltip-left:before
	border-left-color $tooltip-colour

.tooltip-right:before
	border-right-color $tooltip-colour


.tooltip-top
	&:before
	&:after
		bottom 100%
		left 50%

	&:before
		margin-bottom -11px
		left calc(50% - 6px)

	&:after
		transform translateX(-50%)

	&:hover:before
		transform translateY(-8px)

	&:hover:after
		transform translate(-50%, -8px)


.tooltip-bottom
	&:before
	&:after
		top 100%
		left 50%

	&:before
		margin-top -11px
		left calc(50% - 6px)

	&:after
		transform translateX(-50%)

	&:hover:before
		transform translateY(8px)

	&:hover:after
		transform translate(-50%, 8px)


.tooltip-right
	&:before
	&:after
		left 100%
		bottom 50%

	&:before
		margin-left -11px
		margin-bottom -6px

	&:after
		margin-bottom -14px

	&:hover:before
		transform translateX(8px)

	&:hover:after
		transform translateX(8px)


.tooltip-left
	&:before
	&:after
		right 100%
		bottom 50%

	&:before
		margin-right -11px
		margin-bottom -6px

	&:after
		margin-bottom -14px

	&:hover:before
		transform translateX(-8px)

	&:hover:after
		transform translateX(-8px)


.tooltip-top-left
	&:before
	&:after
		bottom 100%
		left 50%

	&:before
		margin-bottom -11px
		left calc(50% - 6px)

	&:after
		transform translateX(-100%)
		margin-left 12px

	&:hover:before
		transform translateY(-8px)

	&:hover:after
		transform translateX(-100%) translateY(-8px)


.tooltip-top-right
	&:before
	&:after
		bottom 100%
		left 50%

	&:before
		margin-bottom -11px
		left calc(50% - 6px)

	&:after
		transform translateX(0)
		margin-left -12px

	&:hover:before
		transform translateY(-8px)

	&:hover:after
		transform translateY(-8px)


.tooltip-bottom-left
	&:before
	&:after
		top 100%
		left 50%

	&:before
		margin-top -11px
		left calc(50% - 6px)

	&:after
		transform translateX(-100%)
		margin-left 12px

	&:hover:before
		transform translateY(8px)

	&:hover:after
		transform translateX(-100%) translateY(8px)


.tooltip-bottom-right
	&:before
	&:after
		top 100%
		left 50%

	&:before
		margin-top -11px
		left calc(50% - 6px)

	&:after
		transform translateX(0)
		margin-left -12px

	&:hover:before
		transform translateY(8px)

	&:hover:after
		transform translateY(8px)
