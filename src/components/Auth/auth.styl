.sign-in-page
	.card
		width 35rem
		margin 5rem auto 1rem
		padding 2rem 2rem 1rem
		background-color $white
		border-radius $border-radius
		border 1px solid $card-border
		box-shadow 0 1px 0 $pale-black

		.button
			margin 2rem auto 0

		h1
			text-align center

		a
			$link-styling()

		p
			line-height 1.4
